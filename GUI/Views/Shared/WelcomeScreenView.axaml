<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GUI.ViewModels.Shared"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="GUI.Views.Shared.WelcomeScreenView"
        x:DataType="vm:WelcomeScreenViewModel">

<StackPanel HorizontalAlignment="Center" Orientation="Vertical" Width="1000" Margin="20">
        <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Tерминал">
                <MenuItem Header="Открыть" Command="{Binding OpenTerminalCommand}" />
            </MenuItem>
        </Menu>
        </DockPanel>
            <Rectangle Height="150"/>
            <TextBlock FontSize="24" FontWeight="Bold" Margin="0 10" Text="{Binding WelcomeMessage}"/>
</StackPanel>

</UserControl>
